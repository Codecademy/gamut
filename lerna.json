{
  "version": "independent",
  "npmClient": "yarn",
  "exact": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "ignoreChanges": ["**/CHANGELOG.md"]
    },
    "version": {
      "changelogPreset": "conventionalcommits"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
