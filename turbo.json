{
  "npmClient": "yarn",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "gamut-icons#build": {
      "outputs": ["src/icons/**", "dist/**"]
    },
    "gamut-patterns#build": {
      "outputs": ["src/patterns/**", "dist/**"]
    },
    "verify": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "cache": false
    }
  },
  "globalDependencies": ["tsconfig.json", "lerna.json", "turbo.json"]
}
