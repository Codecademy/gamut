{
  "name": "client-modules",
  "private": true,
  "description": "Modules and components for Codecademy",
  "version": "1.2.0",
  "license": "Proprietary",
  "author": "Codecademy Engineers <dev@codecademy.com>",
  "engines": {
    "node": "^8.10.0",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "lint": "eslint --ignore-path .eslintignore \"./**/*.{js,ts,tsx,json}\"",
    "lerna": "lerna",
    "prettier": "prettier --ignore-path .eslintignore \"./**/*.{js,ts,tsx,json,css,scss}\"",
    "format": "yarn lint --fix && yarn prettier --write",
    "format:verify": "yarn prettier --list-different",
    "build-all": "yarn wsrun build --exclude-missing",
    "build-storybook": "yarn wsrun build-storybook --exclude-missing",
    "start": "yarn wsrun storybook --exclude-missing",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build-all"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,css,scss}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RyzacInc/client-modules.git"
  },
  "workspaces": [
    "packages/*",
    "workspaces/*"
  ],
  "dependencies": {
    "lerna": "^3.13.1",
    "wsrun": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@codecademy/eslint-config": "^0.1.0",
    "@codecademy/prettier-config": "^0.1.0",
    "@types/chai": "^4.1.7",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.9.0",
    "@types/invariant": "^2.2.29",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.121",
    "@types/react": "^16.8.5",
    "@typescript-eslint/parser": "^1.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-preset-codecademy": "2.1.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "3.3.0",
    "eslint": "^5.15.1",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "23.6.0",
    "jest-environment-jsdom": "23.4.0",
    "jest-environment-jsdom-global": "1.1.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.8.3",
    "react-test-renderer": "^16.8.3",
    "ts-jest": "^23.10.5",
    "typescript": "3.3.3"
  }
}
