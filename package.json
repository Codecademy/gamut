{
  "name": "client-modules",
  "private": true,
  "description": "Modules and components for Codecademy",
  "version": "1.2.0",
  "license": "MIT",
  "author": "Codecademy Engineers <dev@codecademy.com>",
  "engines": {
    "node": "^8.10.0",
    "yarn": "~1.15.2"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint --ignore-path .eslintignore \"./**/*.{js,ts,tsx,json}\"",
    "lerna": "lerna",
    "prettier": "prettier --ignore-path .eslintignore \"./**/*.{js,ts,tsx,json,css,scss}\"",
    "format": "yarn lint --fix && yarn prettier --write",
    "format:verify": "yarn prettier --list-different",
    "verify-all": "yarn lerna run verify",
    "build-all": "yarn lerna run build",
    "start": "yarn && yarn start:storybook",
    "start:storybook": "cd ./workspaces/gamut-storybook && yarn start",
    "build-storybook": "cd ./workspaces/gamut-storybook && yarn build-storybook"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,css,scss}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RyzacInc/client-modules.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "workspaces/*"
    ],
    "nohoist": [
      "**/@storybook/react",
      "**/@storybook/addon-storyshots"
    ]
  },
  "dependencies": {
    "lerna": "3.16.4"
  },
  "devDependencies": {
    "@babel/core": "7.5.4",
    "@babel/polyfill": "7.4.3",
    "@babel/preset-typescript": "7.3.3",
    "@types/chai": "4.1.7",
    "@types/classnames": "2.2.9",
    "@types/enzyme": "3.9.1",
    "@types/invariant": "2.2.29",
    "@types/jest": "24.0.20",
    "@types/lodash": "4.14.123",
    "@types/react": "16.8.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.8.0",
    "babel-plugin-require-context-hook": "1.0.0",
    "babel-preset-codecademy": "2.2.2",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.12.1",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.16.0",
    "husky": "1.3.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.9.0",
    "jest-environment-jsdom": "24.8.0",
    "jest-environment-jsdom-global": "1.2.0",
    "lint-staged": "8.1.5",
    "prettier": "1.18.2",
    "react": "16.8.6",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "react-dom": "16.8.6",
    "react-test-renderer": "16.8.6",
    "typescript": "3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
