{
  "name": "gamut",
  "private": true,
  "description": "Styleguide & Component libraryy for codecademy.com",
  "version": "1.2.0",
  "license": "Proprietary",
  "author": "Jake Hiller <jake@codecademy.com>",
  "engines": {
    "node": "^8.10.0",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "lint": "eslint \"packages/**/*.{ts,tsx,json}\"",
    "lerna": "lerna",
    "prettier": "prettier-eslint --prettier-last \"./**/*.{ts,tsx,json,css,scss}\"",
    "format": "yarn prettier --write",
    "format:verify": "yarn prettier --list-different",
    "build-all": "yarn wsrun build --exclude-missing",
    "build-all-storybook": "yarn wsrun build-storybook --exclude-missing",
    "start": "yarn wsrun storybook --exclude-missing",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RyzacInc/gamut.git"
  },
  "workspaces": [
    "packages/*",
    "workspaces/*"
  ],
  "dependencies": {
    "lerna": "^3.13.1",
    "wsrun": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/chai": "^4.1.7",
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.9.0",
    "@types/invariant": "^2.2.29",
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.121",
    "@types/react": "^16.8.5",
    "@typescript-eslint/parser": "^1.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-preset-codecademy": "2.1.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "3.3.0",
    "eslint": "5.13.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "23.6.0",
    "jest-environment-jsdom": "23.4.0",
    "jest-environment-jsdom-global": "1.1.0",
    "lint-staged": "^7.3.0",
    "prettier": "1.14.3",
    "prettier-eslint-cli": "4.7.1",
    "react": "^16.8.3",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.8.3",
    "react-test-renderer": "^16.8.3",
    "ts-jest": "^23.10.5",
    "typescript": "3.3.3"
  },
  "lint-staged": {
    "**/*.{js,json,css,scss}": [
      "prettier-eslint --prettier-last --write",
      "git add"
    ]
  }
}
