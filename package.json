{
  "name": "Gamut",
  "private": true,
  "description": "Styleguide & Component libraryy for codecademy.com",
  "version": "1.2.0",
  "license": "Proprietary",
  "author": "Jake Hiller <jake@codecademy.com>",
  "engines": {
    "node": ">=6.0.0",
    "yarn": "1.3.2"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint \"packages/**/*.{js,json}\"",
    "lerna": "lerna",
    "build-gamut-storybook": "cd workspaces/gamut-storybook; yarn build",
    "format": "prettier-eslint --prettier-last --write \"packages/**/*.{js,json,css,scss}\"",
    "precommit": "lint-staged",
    "build-eslintconfig": "eslint-reduce-config -v -f .eslintrc.js -o ./.codeclimate_eslintrc.json"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RyzacInc/gamut.git"
  },
  "workspaces": [
    "packages/*",
    "workspaces/*"
  ],
  "dependencies": {
    "lerna": "^2.8.0"
  },
  "devDependencies": {
    "@codecademy/eslint-reduce-config": "1.0.2",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^20.0.3",
    "babel-polyfill": "^6.23.0",
    "babel-preset-codecademy": "^1.1.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^4.15.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.3.0",
    "prettier": "1.9.1",
    "prettier-eslint-cli": "4.4.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4"
  },
  "lint-staged": {
    "packages/**/*.{js,json,css,scss}": [
      "prettier-eslint --prettier-last --write",
      "git add"
    ],
    "eslintrc.js": [
      "yarn build-eslintconfig"
    ]
  }
}
