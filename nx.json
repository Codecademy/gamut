{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": ["build", "test", "verify", "build-storybook"],
        "parallel": 3,
        "useDaemonProcess": false,
        "accessToken": "ZmVjZWYxNzctYTdmZC00ODYzLTg4MzEtZTE1YTVmZDdkZmY1fHJlYWQ="
      }
    }
  },
  "extends": "nx/presets/npm.json",
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "prod": [
      "!{projectRoot}/**/*.(test|spec).ts{,.snap}",
      "!{projectRoot}/**/__tests__/**/*"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["prod", "^prod"]
    },
    "test": {
      "dependsOn": ["^build"]
    }
  },
  "generators": {
    "@nrwl/js:library": {
      "buildable": true
    },
    "@nx/react:library": {
      "buildable": true,
      "publishable": true,
      "style": "@emotion/styled",
      "linter": "eslint"
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json"
}
