{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@codecademy/gamut-labs": ["packages/gamut-labs/src/index.ts"],
      "@codecademy/gamut": ["packages/gamut/src/index.ts"],
      "@codecademy/gamut-icons": ["packages/gamut-icons/src/index.ts"],
      "@codecademy/gamut-patterns": ["packages/gamut-patterns/src/index.ts"],
      "@codecademy/gamut-illustrations": [
        "packages/gamut-illustrations/src/index.ts"
      ],
      "@codecademy/gamut-styles": ["packages/gamut-styles/src/index.ts"],
      "@codecademy/gamut-tests": ["packages/gamut-tests/src/index.tsx"],
      "@codecademy/variance": ["packages/variance/src/index.ts"],
      "@codecademy/monaco": ["packages/monaco/src/index.ts"]
    }
  },
  "exclude": ["**/node_modules", "tmp"]
}
