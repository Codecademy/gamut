{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "declaration": false,
    "paths": {
      "gamut": ["../packages/gamut/src"],
      "gamut-styles": ["../packages/gamut-styles"],
      "gamut-templates": ["../packages/gamut-templates/src"],
      "gamut/*": ["../packages/gamut/src/*"],
      "gamut-styles/*": ["../packages/gamut-styles/*"],
      "gamut-templates/*": ["../packages/gamut-templates/src/*"]
    }
  },
  "include": [
    "./**/*",
    "../../packages/**/src/**/*",
  ],
  "exclude": []
}
