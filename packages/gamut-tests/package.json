  "license": "MIT",
  "main": "./dist/index.js",
  "module": "dist/index.js",
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codecademy/gamut.git"
  },
  "scripts": {
    "verify": "tsc --noEmit",
    "build:compile": "babel ./src --out-dir ./dist --copy-files --extensions \".ts,.tsx\"",
