{
  "author": "Codecademy Engineering <dev@codecademy.com>",
  "dependencies": {
    "@codecademy/gamut-styles": "^13.0.0",
    "component-test-setup": "*",
    "lodash": "^4.17.5"
  },
  "description": "Shared component test setup for Gamut applications",
  "keywords": [
    "gamut",
    "test",
    "component-test-setup",
    "enzyme",
    "rtl"
  ],
  "name": "@codecademy/gamut-tests",
