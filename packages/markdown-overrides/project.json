{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/markdown-overrides/src",
  "projectType": "library",
  "targets": {
    "build": {
      "outputs": ["{options.outputPath}"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/markdown-overrides",
        "outputPath": "./dist",
        "commands": [
          "rm -rf ./dist",
          "babel ./src --out-dir ./dist --extensions \".ts,.tsx\"",
          "tsc --emitDeclarationOnly",
          "cpy './src/**/*.d.ts' './src/**/*.scss' ./dist"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/markdown-overrides"],
      "options": {
        "jestConfig": "packages/markdown-overrides/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
