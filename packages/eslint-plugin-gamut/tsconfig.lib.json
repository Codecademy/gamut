{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": []
  },
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
