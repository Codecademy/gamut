{
  "name": "gamut-styles",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gamut-styles/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "outputs": [
        "{projectRoot}/dist"
      ],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/gamut-styles",
        "commands": [
          "rm -rf ./dist",
          "tsc --emitDeclarationOnly --project tsconfig.lib.json",
          "babel ./src --out-dir ./dist --extensions \".ts,.tsx\"",
          "cpy './src/**/*.{d.ts,scss,svg,png}' ./dist"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{workspaceRoot}/coverage/packages/gamut-styles"
      ],
      "options": {
        "jestConfig": "packages/gamut-styles/jest.config.ts",
        "passWithNoTests": false
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "rm -rf ./dist"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/gamut-styles/**/*.{ts,tsx,js,jsx,json,mdx}"
        ]
      }
    }
  }
}
