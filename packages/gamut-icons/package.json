{
  "name": "@codecademy/gamut-icons",
  "description": "Icon library for codecademy.com",
  "version": "1.1.0",
  "author": "Codecademy <dev@codecademy.com>",
  "main": "icons/index.js",
  "module": "icons/index.js",
  "sideEffects": false,
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.5.2"
  },
  "scripts": {
    "format": "svgo -f ./src --pretty --config=.svgo.yml",
    "clean": "rm -rf ./icons; rm -rf ./tmp; mkdir ./tmp",
    "build:icons": "svgr -d ./tmp/ts --ext 'tsx' ./src",
    "build:index": "create-index ./tmp/ts -r -x tsx js",
    "build:ts": "tsc",
    "rename-icons": "find ./tmp/ts -depth -name \"*.tsx\" -exec sh -c 'mv \"$1\" \"${1%.tsx}Icon.tsx\"' _ {} \\;",
    "rename-index": "find ./tmp/ts -depth -name \"*.js\" -exec sh -c 'mv \"$1\" \"${1%.js}.ts\"' _ {} \\;",
    "clean-index": "yarn rename-index; replace-in-file '/\\.tsx/g' '' tmp/**/index.ts tmp/**/*/index.ts --isRegex --verbose",
    "build": "yarn clean && yarn build:icons && yarn rename-icons && yarn build:index && yarn clean-index && yarn build:ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RyzacInc/client-modules.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@svgr/cli": "4.3.2",
    "create-index": "^2.4.0",
    "replace-in-file": "^4.1.1",
    "svgo": "^1.3.0",
    "typescript": "*"
  }
}
