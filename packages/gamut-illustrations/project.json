{
  "name": "gamut-illustrations",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gamut-illustrations/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "outputs": [
        "{projectRoot}/dist"
      ],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/gamut-illustrations",
        "commands": [
          "rm -rf ./dist",
          "babel ./src --out-dir ./dist --extensions \".ts,.tsx\"",
          "tsc --emitDeclarationOnly"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/packages/gamut-illustrations"
      ],
      "options": {
        "jestConfig": "packages/gamut-illustrations/jest.config.ts"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "rm -rf ./dist"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/gamut-illustrations/**/*.{ts,tsx,js,jsx,json,mdx}"
        ]
      }
    }
  }
}
