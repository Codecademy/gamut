{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "/",
    "baseUrl": ".storybook",
    "paths": {
      "~styleguide/blocks": ["components"]
    },
    "allowJs": true,
    "noEmit": true,
    "declaration": false
  },
  "include": [
    "../../typings/*.d.ts",
    "./*.d.ts",
    "../**/src/**/*",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx",
    "./stories/**/*.ts",
    "./stories/**/*.tsx"
  ]
}
