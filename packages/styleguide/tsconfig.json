{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~styleguide/blocks": [".storybook/components"],
      "@codecademy/storybook-addon-variance": [
        ".storybook/addons/system/components"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "declaration": false
  },
  "include": [
    "../../typings/*.d.ts",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}
