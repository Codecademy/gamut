{
  "name": "styleguide",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/styleguide/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/styleguide",
        "tsConfig": "packages/styleguide/tsconfig.lib.json",
        "project": "packages/styleguide/package.json",
        "entryFile": "packages/styleguide/src/index.ts",
        "external": ["react", "react-dom", "@emotion/react/jsx-runtime"],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "assets": [
          {
            "glob": "packages/styleguide/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "packages/styleguide/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/styleguide",
        "configDir": "packages/styleguide/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c packages/styleguide/.storybook --url=http://localhost:4400"
      }
    }
  }
}
