{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDirs": ["./src", "./typings"],
    "paths": {}
  },
  "files": [
    "../../node_modules/@nrwl/react/typings/cssmodule.d.ts",
    "../../node_modules/@nrwl/react/typings/image.d.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.spec.jsx",
    "**/*.test.jsx"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "typings/**/*.ts",
    "../../packages/gamut-styles/dist/typings/theme.d.ts"
  ]
}
