{
  "name": "@codecademy/gamut",
  "description": "Styleguide & Component library for Codecademy",
  "version": "16.1.1",
  "author": "Codecademy Engineering <dev@codecademy.com>",
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "dist/**/[A-Z]**/[A-Z]*.js",
    "dist/**/[A-Z]**/index.js"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Codecademy/client-modules.git"
  },
  "peerDependencies": {
    "@emotion/core": ">=10.0.0",
    "@emotion/styled": ">=10.0.0",
    "react": ">=16.8.1",
    "react-dom": ">=16.8.1"
  },
  "dependencies": {
    "@codecademy/gamut-icons": "^3.8.1",
    "@codecademy/gamut-styles": "^7.0.1",
    "@types/marked": "^0.6.1",
    "classnames": "^2.2.5",
    "focus-trap-react": "^6.0.0",
    "framer-motion": "^1.11.0",
    "html-to-react": "^1.4.2",
    "insane": "^2.6.2",
    "invariant": "^2.2.4",
    "lodash": "^4.17.5",
    "marked": "^0.6.0",
    "moment": "^2.24.0",
    "react-aria-tabpanel": "^4.4.0",
    "react-hook-form": "6.0.6",
    "react-player": "^2.3.1",
    "react-truncate-markup": "^4.1.1",
    "react-use": "^13.18.0"
  },
  "scripts": {
    "verify": "tsc --noEmit",
    "build:compile": "babel ./src --out-dir ./dist --copy-files --copy-ignored --extensions \".ts,.tsx\"",
    "build:clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "yarn build:clean && yarn build:compile && yarn build:types",
    "build:watch": "yarn build && onchange ./src -- yarn build:compile && yarn build:types",
    "prepublishOnly": "yarn build"
  },
  "license": "MIT",
  "devDependencies": {
    "onchange": "^7.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
