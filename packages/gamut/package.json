{
  "name": "@codecademy/gamut",
  "description": "Styleguide & Component library for Codecademy",
  "version": "44.2.2",
  "author": "Codecademy Engineering <dev@codecademy.com>",
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "dist/**/[A-Z]**/[A-Z]*.js",
    "dist/**/[A-Z]**/index.js"
  ],
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Codecademy/gamut.git"
  },
  "peerDependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2"
  },
  "dependencies": {
    "@codecademy/gamut-icons": "^7.0.1",
    "@codecademy/gamut-illustrations": "^0.22.1",
    "@codecademy/gamut-patterns": "^0.8.2",
    "@codecademy/gamut-styles": "^13.0.1",
    "@codecademy/variance": "^0.20.0",
    "@reach/tabs": "^0.16.4",
    "@types/marked": "^1.1.0",
    "@types/react-select": "^4.0.13",
    "classnames": "^2.2.5",
    "framer-motion": "^4.1.17",
    "html-to-react": "^1.4.2",
    "invariant": "^2.2.4",
    "lodash": "^4.17.5",
    "marked": "^0.7.0",
    "polished": "^4.1.2",
    "react-aria-tabpanel": "^4.4.0",
    "react-focus-on": "^3.5.1",
    "react-hook-form": "6.15.5",
    "react-player": "^2.3.1",
    "react-select": "^4.3.0",
    "react-truncate-markup": "^5.1.0",
    "react-use": "^15.3.8",
    "sanitize-markdown": "^2.6.6"
  },
  "scripts": {
    "verify": "tsc --noEmit",
    "build:compile": "babel ./src --out-dir ./dist --copy-files --extensions \".ts,.tsx\"",
    "build:clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "yarn build:clean && yarn build:compile && yarn build:types",
    "build:watch": "yarn build && onchange ./src -- yarn build:compile && yarn build:types",
    "lernaBuildTask": "yarn build"
  },
  "license": "MIT",
  "devDependencies": {
    "@codecademy/gamut-tests": "^4.0.1",
    "@emotion/jest": "^11.3.0",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/react": "^12.1.2",
    "@types/enzyme": "3.10.7",
    "enzyme": "3.11.0",
    "onchange": "^7.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
